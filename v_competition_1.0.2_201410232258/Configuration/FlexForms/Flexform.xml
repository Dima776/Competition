<T3DataStructure>
<sheets>
	
	<Competition>
	  <ROOT>
		<type>array</type>
		  <el>		
			<settings.competition_id>
			  <TCEforms>
				<label>Choose Competition </label>
			
				
					  <config>
							<type>select</type>
							<treeView>1</treeView>
							<foreign_table>tx_vcompetition_domain_model_competition</foreign_table>			
							<foreign_table_where>AND tx_vcompetition_domain_model_competition.deleted=0</foreign_table_where>
							<autoSizeMax>10</autoSizeMax>
							<minitems>0</minitems>
							<maxitems>1</maxitems>
							
								<items type="array">
									<numIndex index="100">
									<numIndex index="0">All</numIndex>
									<numIndex index="1">0</numIndex>
									</numIndex>
								</items>
							<allowNonIdValues>1</allowNonIdValues>
						</config>
					
			   </TCEforms>
			</settings.competition_id>
						
			<settings.contact>
				<TCEforms>
					<label>Add contact filed?</label>
						<config>
							<type>check</type>
						</config>
				</TCEforms>
			</settings.contact>
			
			
		
		</el>
	   </ROOT>  
	</Competition>
    
	<Folder>
	  <ROOT>
		<type>array</type>
		  <el>
			<settings.folder>
				<TCEforms>
					<label>Choose folder for saving records from page tree</label>
						<config>
							<type>group</type>
							<size>1</size>
							<internal_type>db</internal_type>
							 <allowed>pages</allowed>
							 <minitems>1</minitems>
							<maxitems>1</maxitems>
							<show_thumbs>0</show_thumbs>
						</config>
				</TCEforms>
			</settings.folder>
		  
		  </el>
	   </ROOT>  
	</Folder>
	
	<Mail>
	  <ROOT>
		<type>array</type>
		  <el>
			<settings.send_mail>
				<TCEforms>
					<label>Send a message to your mail?</label>
						<config>
							<type>check</type>
						</config>
				</TCEforms>
			</settings.send_mail>
						
			<settings.mail>
				<TCEforms>
					<label>Your mail:</label>
						<config>
							<type>input</type>
						</config>
				</TCEforms>
			</settings.mail>
						
						
		  </el>
	   </ROOT>  
	</Mail>
	
	<Media>
	  <ROOT>
		<type>array</type>
		  <el>
			<settings.maxWidth>
				<TCEforms>
					<label>Image maxWidth</label>
						<config>
							<type>input</type>
							<size>5</size>
						</config>
				</TCEforms>
			</settings.maxWidth>
		  
		  </el>
	   </ROOT>  
	</Media>
	
	
   
  </sheets> 
</T3DataStructure>



